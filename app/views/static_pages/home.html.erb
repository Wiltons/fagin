<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to Fagin</h1>
    <%= image_tag("fagin.gif", alt:"Fagin") %>
    <h2>Pick what's in your Pocket</h2>

    <%= link_to "Sign in with Pocket", signup_path, class: "btn btn-large btn-primary" %>

  </div>

  <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>
