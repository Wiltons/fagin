<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
    </aside>
    <%= button_to (@fetch), class: "btn" do %>
      Test
    <% end %>
    <%= button_to "Fetch New Pocket Articles",
                { :controller => 'users',
                  :action => "populate_articles",
                  :since => current_user.last_fetch},
                  class: "btn" %>
    <%= button_to "Fetch All Pocket Articles",
                { :controller => 'users',
                  :action => "populate_articles"},
                  :data => {confirm: "Are you sure?\nThis action will fetch your full Pocket list and may take a long time." },
                  class: "btn" %>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to Fagin</h1>
    <%= image_tag("fagin.gif", alt:"Fagin") %>
    <h2>Pick what's in your Pocket</h2>

    <%= link_to "Sign in with Pocket", '/auth/pocket', class: "btn btn-large btn-primary" %>

  </div>

  <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>
