<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
    </aside>

    <%= form_for(@fetch) do |f| %>
      <%= f.label :full_fetch %>
      <%= f.radio_button(:full_fetch, true) %>
      <%= f.label "partial fetch" %>
      <%= f.radio_button(:full_fetch, false) %>
      <%= f.submit "Fetch Pocket Articles", data: {confirm: "Test"} %>
    <% end %>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to Fagin</h1>
    <%= image_tag("fagin.gif", alt:"Fagin") %>
    <h2>Pick what's in your Pocket</h2>

    <%= link_to "Sign in with Pocket", '/auth/pocket', class: "btn btn-large btn-primary" %>

  </div>

  <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>
